# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Format: sk-ant-api03-...
PERPLEXITY_API_KEY=pplx-           # Optional: Perplexity API key for research

# Model Configuration
MODEL=llama3             # Default LLM model
PERPLEXITY_MODEL=sonar-medium-online  # Perplexity model to use for research
MAX_TOKENS=16000         # Maximum tokens for responses
TEMPERATURE=0.7          # Temperature for model responses

# Logging Configuration
DEBUG=false              # Enable debug logging
LOG_LEVEL=info           # Console output level (debug, info, warn, error)

# Task Generation Settings
DEFAULT_SUBTASKS=3       # Default number of subtasks to generate
DEFAULT_PRIORITY=medium  # Default priority for new tasks

# Project Metadata (Optional)
PROJECT_NAME="Task Master Project"  # Project name
PROJECT_VERSION="1.0.0"            # Project version

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434  # URL for Ollama API
OLLAMA_MODEL=llama3                # Default Ollama model to use